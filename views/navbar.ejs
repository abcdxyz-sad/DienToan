<link rel="stylesheet" href="/css/custom_theme.css">
<nav class="navbar navbar-expand-lg navbar-custom">
    <style>
        nav.navbar-custom {
            border-radius: 0 0 8px 8px;
            background: #363636;
            background: linear-gradient(90deg, rgba(54, 54, 54, 1) 0%, rgba(26, 54, 71, 1) 20%);
        }

        .btn-guide {
            background-color: transparent;
            color: #ffffff;
            font-weight: bold;
            border: none;
            transition: all 0.3s ease;
            position: relative;
            text-decoration: none;
        }

        /* Hover hiệu ứng nhẹ nhưng không đổi nền */
        .btn-guide:hover {
            color: #ffffff;
            text-shadow:
                0 0 4px rgba(255, 255, 255, 0.8),
                0 0 8px rgba(255, 255, 255, 0.6),
                0 0 12px rgba(255, 255, 255, 0.4);
        }
    </style>

    <div class="container-fluid">
        <!-- Brand + Toggle -->
        <% if (typeof session !=="undefined" && session.MaNguoiDung) { %>
            <div class="d-flex align-items-center text-white gap-2">
                <img src="<%= session.Avatar || '/img/default.png' %>" alt="Avatar" width="40" height="40"
                    class="rounded-circle border border-light shadow-sm avatar-hover" style="object-fit: cover;">
                <div class="d-flex flex-column justify-content-center">
                    <span class="fw-semibold d-inline-flex align-items-center">
                        Chào, <%= session.HoVaTen || 'người dùng' %>!
                            <span
                                style="border-left: 2px solid #727272a2; height: 40px; margin-left: 8px; display: inline-block;"></span>
                    </span>
                </div>
            </div>
            <% } %>

                <!-- Nút toggler cho mobile -->
                <button class="navbar-toggler text-white border-white" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Left-side nav links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <% if(typeof session==="undefined" || !session.MaNguoiDung) { %>
                            <!-- chưa đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" href="/dangky"><i class="bi bi-person-plus-fill"></i> Đăng ký</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/dangnhap"><i class="bi bi-box-arrow-in-right"></i> Đăng
                                    nhập</a>
                            </li>
                            <% } else { %>
                                <% if(session.QuyenHan=="admin" ) { %>
                                    <!-- admin menu -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin"
                                            role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-gear"></i> Quản trị
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                    </li>
                                    <li><a class="dropdown-item" href="/taikhoan"><i class="bi bi-people"></i> Tài
                                            khoản</a></li>
                    </ul>
                    </li>
                    <% } %>
                        <!-- common user links -->
                        <li class="nav-item">
                            <a class="nav-link" href="/ghichu/them"><i class="bi bi-plus-circle"></i> Tạo ghi
                                chú mới</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person"></i>
                                <%= session.HoVaTen %>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownProfile">
                                <li><a class="dropdown-item" href="/ghichu/cuatoi"><i
                                            class="bi bi-journal-bookmark"></i> Ghi chú của tôi</a></li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li><a class="dropdown-item" href="/taikhoan/cuatoi/<%= session.MaNguoiDung %>"><i
                                            class="bi bi-person-badge"></i> Hồ sơ cá nhân</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dangxuat"><i class="bi bi-box-arrow-right"></i> Đăng
                                xuất</a>
                        </li>
                        </ul>
                        <button class="btn-guide me-3" onclick="startTutorial()" id="tutorialButton">
                            <i class="bi bi-info-circle"></i>
                        </button>
                        <% } %>

                </div>
    </div>
</nav>
<!-- Đảm bảo đã thêm thư viện JavaScript của Bootstrap 5 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>